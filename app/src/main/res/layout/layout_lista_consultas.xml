<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_lista_fundo"
    android:padding="8dp">


    <ImageView
        android:id="@+id/layout_lista_foto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/calendario3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:hint="nome do medico"
            android:textColor="#000"
            android:id="@+id/layout_lista_nome_medico"
            android:textSize="18dp" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:hint="Data"
            android:id="@+id/layout_lista_data"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:hint="Horario"
            android:id="@+id/layout_lista_horario"/>


    </LinearLayout>



</LinearLayout>